---
interface Props {
  title: string;
  date: Date;
  summary: string;
  category: string;
  slug: string;
  status?: string;
}

const { title, date, summary, category, slug, status } = Astro.props;

// Extract just the filename from the slug if it includes folder
const cleanSlug = slug.split('/').pop() || slug;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});

const statusColors = {
  'in-progress': '#4a9eff',
  'completed': '#22c55e',
  'blocked': '#ef4444',
  'paused': '#f59e0b'
};

const statusEmoji = {
  'in-progress': 'üîß',
  'completed': '‚úì',
  'blocked': '‚ö†',
  'paused': '‚è∏'
};
---

<a href={`/updates/${slug}`} class="card">
  <div class="card-header">
    <h3>{title}</h3>
    {status && (
      <span class="status" style={`background: ${statusColors[status as keyof typeof statusColors]}20; color: ${statusColors[status as keyof typeof statusColors]}`}>
        <span class="emoji">{statusEmoji[status as keyof typeof statusEmoji]}</span>
        {status}
      </span>
    )}
  </div>
  <p class="date">{formattedDate}</p>
  <p class="summary">{summary}</p>
</a>

<style>
  .card {
    background: #131313;
    border: 1px solid #252525;
    border-radius: 12px;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
    display: block;
    transition: all 0.3s ease;
    min-width: 320px;
    max-width: 380px;
  }

  .card:hover {
    border-color: #404040;
    background: #161616;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 1.25rem;
    margin-bottom: 0.75rem;
  }

  h3 {
    margin: 0;
    font-size: 1.15rem;
    font-weight: 500;
    color: #fff;
    line-height: 1.4;
    letter-spacing: -0.01em;
  }

  .status {
    font-size: 0.7rem;
    padding: 0.4rem 0.75rem;
    border-radius: 6px;
    white-space: nowrap;
    font-weight: 500;
    text-transform: capitalize;
    display: flex;
    align-items: center;
    gap: 0.35rem;
  }

  .emoji {
    font-size: 0.85rem;
  }

  .date {
    color: #666;
    font-size: 0.85rem;
    margin: 0 0 1rem 0;
  }

  .summary {
    color: #999;
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.6;
  }
</style>