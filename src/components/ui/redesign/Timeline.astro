---
/**
 * Timeline Component - Design System
 *
 * Container component for timeline layout with vertical connecting line
 * Based on /design/activity-log-redesign.html
 */

interface Props {
  class?: string;
}

const {
  class: className = '',
} = Astro.props;

const classes = [
  'relative',
  'pl-10', // padding-left: 40px
  className,
].filter(Boolean).join(' ');
---

<div class={classes}>
  <!-- Vertical connecting line -->
  <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700"></div>

  <slot />
</div>
