---
/**
 * Button Component - Design System
 *
 * Based on /design folder HTML prototypes
 * Supports primary, secondary, and ghost variants
 * with small, medium (default), and large sizes
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  href?: string;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  href,
  class: className = '',
} = Astro.props;

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  ghost: 'btn-ghost',
};

const sizeClasses = {
  sm: 'btn-sm',
  md: '',
  lg: 'btn-lg',
};

const classes = [
  'btn',
  variantClasses[variant],
  sizeClasses[size],
  className,
].filter(Boolean).join(' ');

const Element = href ? 'a' : 'button';
---

<Element
  class={classes}
  type={!href ? type : undefined}
  disabled={disabled}
  href={href}
  {...Astro.props}
>
  <slot />
</Element>
