---
import BaseLayout from '../components/layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found">
  <div class="min-h-screen flex items-center justify-center bg-base-200 p-6">
    <div class="card bg-base-100 shadow-xl max-w-md w-full">
      <div class="card-body items-center text-center">
        <!-- 404 Icon -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-20 h-20 text-warning mb-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z"
          />
        </svg>

        <h1 class="text-6xl font-bold text-primary mb-2">404</h1>
        <h2 class="card-title text-2xl mb-2">Page Not Found</h2>

        <p class="text-base-content/70 mb-6">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <div class="card-actions flex-col sm:flex-row gap-3 w-full">
          <button
            onclick="window.history.back()"
            class="btn btn-outline flex-1"
          >
            Go Back
          </button>
          <a
            href="/"
            class="btn bg-[#22c55e] hover:bg-[#16a34a] text-white border-0 flex-1"
          >
            Go Home
          </a>
        </div>

        <!-- Helpful Links -->
        <div class="divider">Or explore</div>
        <div class="flex flex-wrap justify-center gap-2">
          <a href="/projects" class="link link-hover text-sm">Projects</a>
          <span class="text-base-content/30">•</span>
          <a href="/updates" class="link link-hover text-sm">Updates</a>
          <span class="text-base-content/30">•</span>
          <a href="/settings" class="link link-hover text-sm">Settings</a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
