---
import BaseLayout from '../components/layouts/BaseLayout.astro';

// Middleware handles redirect if already authenticated
const user = Astro.locals.user;

// Check for error messages from callback
const errorParam = Astro.url.searchParams.get('error');
const errorMessages: Record<string, string> = {
  'auth_failed': 'Authentication failed. Please try again.',
  'no_code': 'No authorization code received. Please try again.',
  'no_session': 'Failed to create session. Please try again.',
};
const errorMessage = errorParam ? errorMessages[errorParam] : null;
---

<BaseLayout
  title="Sign In â€” Workspace by Ali"
  description="Sign in to your Workspace account"
>
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h1>Welcome to Workspace</h1>
        <p class="subtitle">Sign in to manage your research projects</p>
      </div>

      <div class="login-methods">
        <!-- GitHub OAuth Form -->
        <form action="/api/auth/signin" method="post">
          <input type="hidden" name="provider" value="github" />
          <button type="submit" class="login-button github">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Continue with GitHub
          </button>
        </form>

        <div class="divider">
          <span>or</span>
        </div>

        <!-- Magic Link Email Form -->
        <form id="email-login-form" action="/api/auth/signin" method="post" class="email-form">
          <label for="email">Email address</label>
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            placeholder="your@email.com"
            required
          />
          <button type="submit" class="login-button email">
            Send magic link
          </button>
        </form>

        <div id="success-message" class="message success" style="display: none;">
          Check your email! We sent you a magic link to sign in.
        </div>

        {errorMessage && (
          <div class="message error">
            {errorMessage}
          </div>
        )}

        <div id="error-message" class="message error" style="display: none;"></div>
      </div>

      <p class="note">
        By signing in, you agree to our safety protocols and research ethics framework.
        <a href="/safety">Learn more</a>
      </p>
    </div>
  </div>
</BaseLayout>

<script>
  // Handle magic link form submission via fetch to show success message
  const emailForm = document.getElementById('email-login-form') as HTMLFormElement;
  emailForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(emailForm);
    const emailInput = document.getElementById('email') as HTMLInputElement;

    try {
      const response = await fetch('/api/auth/signin', {
        method: 'POST',
        body: formData,
      });

      const result = await response.json();

      if (response.ok) {
        showSuccess();
        emailForm.reset();
      } else {
        showError(result.error || 'Failed to send magic link. Please try again.');
      }
    } catch (error) {
      showError('Failed to send magic link. Please try again.');
      console.error(error);
    }
  });

  function showSuccess() {
    const successMsg = document.getElementById('success-message');
    const errorMsg = document.getElementById('error-message');
    if (successMsg) successMsg.style.display = 'block';
    if (errorMsg) errorMsg.style.display = 'none';
  }

  function showError(message: string) {
    const errorMsg = document.getElementById('error-message');
    const successMsg = document.getElementById('success-message');
    if (errorMsg) {
      errorMsg.textContent = message;
      errorMsg.style.display = 'block';
    }
    if (successMsg) successMsg.style.display = 'none';
  }
</script>

<style>
  /**
   * Login Page Styling
   * Using Workspace Brand Design System
   * See: docs/architecture/04_Brand_Design_System.md
   */

  .login-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .login-card {
    background: var(--surface-1);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    padding: 3rem;
    max-width: 440px;
    width: 100%;
    box-shadow: var(--shadow-md);
  }

  .login-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .login-header h1 {
    margin: 0 0 0.75rem;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .subtitle {
    margin: 0;
    color: var(--text-muted);
    font-size: 1rem;
  }

  .login-methods {
    margin-bottom: 2rem;
  }

  .login-button {
    width: 100%;
    padding: 0.875rem 1.25rem;
    border: 1px solid var(--border-default);
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .login-button.github {
    background: var(--text-primary);
    color: var(--bg);
    border-color: var(--text-primary);
  }

  .login-button.github:hover {
    background: var(--text-secondary);
    border-color: var(--text-secondary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .login-button.email {
    /* Commons blue for authentication (trust) */
    background: var(--commons-primary);
    color: white;
    border-color: var(--commons-primary);
  }

  .login-button.email:hover {
    background: #2563eb; /* Slightly darker blue */
    border-color: #2563eb;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 1.5rem 0;
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    border-bottom: 1px solid var(--border-default);
  }

  .divider span {
    padding: 0 1rem;
  }

  .email-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .email-form label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
  }

  .email-form input {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--bg);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-sm);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .email-form input:focus {
    outline: none;
    border-color: var(--commons-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
  }

  .message {
    padding: 0.875rem 1rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .message.success {
    background: color-mix(in oklab, var(--success) 15%, transparent);
    border: 1px solid color-mix(in oklab, var(--success) 30%, transparent);
    color: var(--success);
  }

  .message.error {
    background: color-mix(in oklab, var(--error) 15%, transparent);
    border: 1px solid color-mix(in oklab, var(--error) 30%, transparent);
    color: var(--error);
  }

  .note {
    text-align: center;
    font-size: 0.825rem;
    color: var(--text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .note a {
    color: var(--commons-primary);
    text-decoration: none;
  }

  .note a:hover {
    color: #2563eb; /* Darker blue on hover */
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-card {
      padding: 2rem 1.5rem;
    }

    .login-header h1 {
      font-size: 1.5rem;
    }
  }

  /* Dark mode adjustments */
  @media (prefers-color-scheme: dark) {
    .login-button.github {
      background: var(--text-primary);
      color: var(--bg);
    }

    .login-button.github:hover {
      background: var(--text-secondary);
    }

    .email-form input {
      background: var(--surface-2);
    }
  }
</style>
