---
import Layout from '../components/Layout.astro';
---

<Layout
  title="Sign In â€” Workspace by Ali"
  description="Sign in to your Workspace account"
>
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h1>Welcome to Workspace</h1>
        <p class="subtitle">Sign in to manage your research projects</p>
      </div>

      <div class="login-methods">
        <button id="github-login" class="login-button github">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          Continue with GitHub
        </button>

        <div class="divider">
          <span>or</span>
        </div>

        <form id="email-login-form" class="email-form">
          <label for="email">Email address</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="your@email.com"
            required
          />
          <button type="submit" class="login-button email">
            Send magic link
          </button>
        </form>

        <div id="success-message" class="message success" style="display: none;">
          Check your email! We sent you a magic link to sign in.
        </div>

        <div id="error-message" class="message error" style="display: none;"></div>
      </div>

      <p class="note">
        By signing in, you agree to our safety protocols and research ethics framework.
        <a href="/safety">Learn more</a>
      </p>
    </div>
  </div>
</Layout>

<script>
  import { signInWithGitHub, signInWithEmail } from '../lib/auth';

  // GitHub login
  const githubButton = document.getElementById('github-login');
  githubButton?.addEventListener('click', async () => {
    try {
      await signInWithGitHub();
      // Redirect happens automatically via OAuth
    } catch (error) {
      showError('Failed to sign in with GitHub. Please try again.');
      console.error(error);
    }
  });

  // Email magic link login
  const emailForm = document.getElementById('email-login-form') as HTMLFormElement;
  emailForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const emailInput = document.getElementById('email') as HTMLInputElement;
    const email = emailInput.value.trim();

    if (!email) {
      showError('Please enter your email address');
      return;
    }

    try {
      await signInWithEmail(email);
      showSuccess();
      emailForm.reset();
    } catch (error) {
      showError('Failed to send magic link. Please try again.');
      console.error(error);
    }
  });

  function showSuccess() {
    const successMsg = document.getElementById('success-message');
    const errorMsg = document.getElementById('error-message');
    if (successMsg) successMsg.style.display = 'block';
    if (errorMsg) errorMsg.style.display = 'none';
  }

  function showError(message: string) {
    const errorMsg = document.getElementById('error-message');
    const successMsg = document.getElementById('success-message');
    if (errorMsg) {
      errorMsg.textContent = message;
      errorMsg.style.display = 'block';
    }
    if (successMsg) successMsg.style.display = 'none';
  }
</script>

<style>
  .login-container {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .login-card {
    background: var(--elev-2);
    border: 1px solid var(--border-2);
    border-radius: var(--radius-md);
    padding: 3rem;
    max-width: 440px;
    width: 100%;
  }

  .login-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .login-header h1 {
    margin: 0 0 0.75rem;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-1);
    letter-spacing: -0.02em;
  }

  .subtitle {
    margin: 0;
    color: var(--text-4);
    font-size: 1rem;
  }

  .login-methods {
    margin-bottom: 2rem;
  }

  .login-button {
    width: 100%;
    padding: 0.875rem 1.25rem;
    border: 1px solid var(--border-2);
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
  }

  .login-button.github {
    background: var(--text-1);
    color: var(--bg);
    border-color: var(--text-1);
  }

  .login-button.github:hover {
    background: var(--text-2);
    border-color: var(--text-2);
    transform: translateY(-1px);
  }

  .login-button.email {
    background: var(--brand);
    color: white;
    border-color: var(--brand);
  }

  .login-button.email:hover {
    background: var(--brand-2);
    border-color: var(--brand-2);
    transform: translateY(-1px);
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 1.5rem 0;
    color: var(--text-5);
    font-size: 0.875rem;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    border-bottom: 1px solid var(--border-2);
  }

  .divider span {
    padding: 0 1rem;
  }

  .email-form {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .email-form label {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-2);
  }

  .email-form input {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--elev-1);
    border: 1px solid var(--border-2);
    border-radius: var(--radius-sm);
    color: var(--text-1);
    font-size: 1rem;
  }

  .email-form input:focus {
    outline: none;
    border-color: var(--brand);
    box-shadow: 0 0 0 3px rgba(74, 158, 255, 0.15);
  }

  .message {
    padding: 0.875rem 1rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    margin-top: 1rem;
  }

  .message.success {
    background: color-mix(in oklab, var(--ok) 15%, transparent);
    border: 1px solid color-mix(in oklab, var(--ok) 30%, transparent);
    color: var(--ok);
  }

  .message.error {
    background: color-mix(in oklab, var(--err) 15%, transparent);
    border: 1px solid color-mix(in oklab, var(--err) 30%, transparent);
    color: var(--err);
  }

  .note {
    text-align: center;
    font-size: 0.825rem;
    color: var(--text-5);
    margin: 0;
    line-height: 1.6;
  }

  .note a {
    color: var(--brand);
    text-decoration: none;
  }

  .note a:hover {
    color: var(--brand-2);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .login-card {
      padding: 2rem 1.5rem;
    }

    .login-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
