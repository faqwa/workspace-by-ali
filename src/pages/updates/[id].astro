---
import DashboardLayout from '../../components/layouts/DashboardLayout.astro';
import Breadcrumb from '../../components/ui/Breadcrumb';
import { createSupabaseServer } from '../../lib/supabaseServer';
import { formatDistanceToNow } from 'date-fns';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../../keystatic.config';
import { DocumentRenderer } from '@keystatic/core/renderer';

// Get update slug from URL
const { id: slug } = Astro.params;

// Get user
const supabase = createSupabaseServer(Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

if (!user) {
  return Astro.redirect('/login');
}

if (!slug) {
  return Astro.redirect('/updates');
}

// Read update from Keystatic
const reader = createReader(process.cwd(), keystaticConfig);

let update;
try {
  update = await reader.collections.updates.read(slug);
} catch (error) {
  console.error('Error fetching update:', error);
  return Astro.redirect('/updates');
}

if (!update) {
  return Astro.redirect('/updates');
}

// Format dates
const updateDate = new Date(update.date || Date.now());
const createdAgo = formatDistanceToNow(updateDate, { addSuffix: true });

// Get type badge color
const getTypeBadgeClass = (type: string) => {
  const types: Record<string, string> = {
    'experiment': 'badge-primary',
    'observation': 'badge-secondary',
    'milestone': 'badge-accent',
    'note': 'badge-info',
  };
  return types[type] || 'badge-ghost';
};
---

<DashboardLayout title={`${update.title} - Workspace`}>
  <!-- Breadcrumb -->
  <Breadcrumb
    client:load
    items={[
      { label: 'Dashboard', href: '/' },
      { label: 'Updates', href: '/updates' },
      { label: update.title }
    ]}
  />

  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-3">
        <h1 class="text-3xl font-bold text-base-content">
          {update.title}
        </h1>

        <!-- Type badge -->
        {update.type && (
          <div class={`badge ${getTypeBadgeClass(update.type)} badge-lg`}>
            {update.type}
          </div>
        )}
      </div>

      <div class="flex flex-wrap gap-4 text-sm text-base-content/60">
        <!-- Created date -->
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-4 h-4">
            <path strokeLinecap="round" strokeLinejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {createdAgo}
        </div>

        <!-- Linked project -->
        {update.projectSlug && (
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-4 h-4">
              <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776" />
            </svg>
            <a href={`/projects/${update.projectSlug}`} class="link link-hover text-primary">
              {update.projectSlug}
            </a>
          </div>
        )}

        <!-- Tags -->
        {update.tags && update.tags.length > 0 && (
          <div class="flex items-center gap-2">
            {update.tags.map((tag) => (
              <span class="badge badge-sm badge-outline">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </div>

    <!-- Action buttons -->
    <div class="flex gap-2">
      <a href="/keystatic#/collection/updates" class="btn btn-ghost">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
          <path strokeLinecap="round" strokeLinejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
        </svg>
        Edit in Keystatic
      </a>
    </div>
  </div>

  <!-- Update Content -->
  <div class="card bg-base-100 shadow mb-8">
    <div class="card-body">
      {update.content ? (
        <div class="prose max-w-none">
          <DocumentRenderer document={update.content} />
        </div>
      ) : (
        <p class="text-base-content/40 italic">No content provided</p>
      )}
    </div>
  </div>

  <!-- Metadata Card -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Update Info -->
    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Update Information</h3>

        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-base-content/60">Type</span>
            <div class={`badge ${getTypeBadgeClass(update.type || 'note')}`}>
              {update.type || 'note'}
            </div>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-base-content/60">Date</span>
            <span class="text-base-content font-medium">
              {new Intl.DateTimeFormat('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              }).format(updateDate)}
            </span>
          </div>

          {update.projectSlug && (
            <div class="flex justify-between items-center">
              <span class="text-base-content/60">Project</span>
              <a href={`/projects/${update.projectSlug}`} class="link link-primary font-medium">
                {update.projectSlug}
              </a>
            </div>
          )}

          {update.subProjectSlug && (
            <div class="flex justify-between items-center">
              <span class="text-base-content/60">Sub-Project</span>
              <span class="text-base-content font-medium">
                {update.subProjectSlug}
              </span>
            </div>
          )}

          <div class="flex justify-between items-center">
            <span class="text-base-content/60">Slug</span>
            <code class="text-xs bg-base-200 px-2 py-1 rounded">
              {slug}
            </code>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Quick Actions</h3>

        <div class="space-y-2">
          <a href="/keystatic#/collection/updates" class="btn btn-block bg-personal-primary hover:bg-personal-primary-hover text-white border-0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
              <path strokeLinecap="round" strokeLinejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create New Update
          </a>

          <a href="/updates" class="btn btn-block btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
              <path strokeLinecap="round" strokeLinejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
            </svg>
            View All Updates
          </a>

          {update.projectSlug && (
            <a href={`/projects/${update.projectSlug}`} class="btn btn-block btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
                <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776" />
              </svg>
              Go to Project
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
