---
import DashboardLayout from '../../components/layouts/DashboardLayout.astro';
import Breadcrumb from '../../components/ui/Breadcrumb';
import { createSupabaseServer } from '../../lib/supabaseServer';
import { formatDistanceToNow } from 'date-fns';

// Get activity ID from URL
const { id } = Astro.params;

// Get user
const supabase = createSupabaseServer(Astro.cookies);
const { data: { user } } = await supabase.auth.getUser();

if (!user) {
  return Astro.redirect('/login');
}

if (!id) {
  return Astro.redirect('/updates');
}

// Fetch activity details with project info
const { data: activity, error: activityError } = await supabase
  .from('activities')
  .select('*, projects(id, name, visibility)')
  .eq('id', id)
  .single();

if (activityError || !activity) {
  console.error('Error fetching activity:', activityError);
  return Astro.redirect('/updates');
}

// Check if user owns this activity or if linked project is public
const isOwner = activity.user_id === user.id;
const linkedProject = activity.projects;
const canView = isOwner || (linkedProject && linkedProject.visibility === 'public');

if (!canView) {
  return Astro.redirect('/updates');
}

// Format dates
const createdDate = new Date(activity.created_at);
const createdAgo = formatDistanceToNow(createdDate, { addSuffix: true });

// Get type badge color
const getTypeBadgeClass = (type: string) => {
  const types: Record<string, string> = {
    'progress': 'badge-primary',
    'insight': 'badge-secondary',
    'milestone': 'badge-accent',
    'challenge': 'badge-warning',
    'resource': 'badge-info',
  };
  return types[type] || 'badge-ghost';
};
---

<DashboardLayout title={`${activity.title} - Workspace`}>
  <!-- Breadcrumb -->
  <Breadcrumb
    client:load
    items={[
      { label: 'Dashboard', href: '/' },
      { label: 'Updates', href: '/updates' },
      { label: activity.title }
    ]}
  />

  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
    <div class="flex-1">
      <div class="flex items-center gap-3 mb-3">
        <h1 class="text-3xl font-bold text-base-content">
          {activity.title}
        </h1>

        <!-- Type badge -->
        {activity.type && (
          <div class={`badge ${getTypeBadgeClass(activity.type)} badge-lg`}>
            {activity.type}
          </div>
        )}
      </div>

      <div class="flex flex-wrap gap-4 text-sm text-base-content/60">
        <!-- Created date -->
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-4 h-4">
            <path strokeLinecap="round" strokeLinejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {createdAgo}
        </div>

        <!-- Linked project -->
        {linkedProject && (
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-4 h-4">
              <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776" />
            </svg>
            <a href={`/projects/${linkedProject.id}`} class="link link-hover text-primary">
              {linkedProject.name}
            </a>
          </div>
        )}
      </div>
    </div>

    <!-- Action buttons (only for owner) -->
    {isOwner && (
      <div class="flex gap-2">
        <button
          class="btn btn-ghost"
          onclick={`
            if (confirm('Delete this update? This cannot be undone.')) {
              fetch('/api/updates/${id}', { method: 'DELETE' })
                .then(res => {
                  if (res.ok) {
                    window.location.href = '/updates';
                  } else {
                    alert('Failed to delete update');
                  }
                })
                .catch(err => {
                  console.error(err);
                  alert('Error deleting update');
                });
            }
          `}
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5 text-error">
            <path strokeLinecap="round" strokeLinejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
          Delete
        </button>
      </div>
    )}
  </div>

  <!-- Activity Content -->
  <div class="card bg-base-100 shadow mb-8">
    <div class="card-body">
      {activity.content ? (
        <div class="prose max-w-none">
          <div class="whitespace-pre-wrap text-base-content/80 leading-relaxed">
            {activity.content}
          </div>
        </div>
      ) : (
        <p class="text-base-content/40 italic">No content provided</p>
      )}
    </div>
  </div>

  <!-- Metadata Card -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Activity Info -->
    <div class="card bg-base-100 shadow">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">Activity Information</h3>

        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-base-content/60">Type</span>
            <div class={`badge ${getTypeBadgeClass(activity.type || 'update')}`}>
              {activity.type || 'update'}
            </div>
          </div>

          <div class="flex justify-between items-center">
            <span class="text-base-content/60">Created</span>
            <span class="text-base-content font-medium">
              {new Intl.DateTimeFormat('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
              }).format(createdDate)}
            </span>
          </div>

          {linkedProject && (
            <div class="flex justify-between items-center">
              <span class="text-base-content/60">Project</span>
              <a href={`/projects/${linkedProject.id}`} class="link link-primary font-medium">
                {linkedProject.name}
              </a>
            </div>
          )}

          <div class="flex justify-between items-center">
            <span class="text-base-content/60">ID</span>
            <code class="text-xs bg-base-200 px-2 py-1 rounded">
              {activity.id.substring(0, 8)}...
            </code>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    {isOwner && (
      <div class="card bg-base-100 shadow">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4">Quick Actions</h3>

          <div class="space-y-2">
            <a href="/updates/new" class="btn btn-block bg-personal-primary hover:bg-personal-primary-hover text-white border-0">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
                <path strokeLinecap="round" strokeLinejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
              Create New Update
            </a>

            <a href="/updates" class="btn btn-block btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
                <path strokeLinecap="round" strokeLinejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
              </svg>
              View All Updates
            </a>

            {linkedProject && (
              <a href={`/projects/${linkedProject.id}`} class="btn btn-block btn-ghost">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-5 h-5">
                  <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 00-1.883 2.542l.857 6a2.25 2.25 0 002.227 1.932H19.05a2.25 2.25 0 002.227-1.932l.857-6a2.25 2.25 0 00-1.883-2.542m-16.5 0V6A2.25 2.25 0 016 3.75h3.879a1.5 1.5 0 011.06.44l2.122 2.12a1.5 1.5 0 001.06.44H18A2.25 2.25 0 0120.25 9v.776" />
                </svg>
                Go to Project
              </a>
            )}
          </div>
        </div>
      </div>
    )}
  </div>
</DashboardLayout>
